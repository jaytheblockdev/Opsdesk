import React, { useState, useEffect } from 'react';
import { Calendar, Users, FolderKanban, CheckSquare, Plus, Search, Filter, MoreVertical, AlertCircle, Clock, TrendingUp } from 'lucide-react';

// Mock data for demonstration
const MOCK_USER = {
  id: 1,
  email: 'admin@opsdesk.io',
  name: 'Admin User',
  role: 'admin'
};

const MOCK_PROJECTS = [
  {
    id: 1,
    name: 'Client Portal Redesign',
    client: 'Acme Corp',
    description: 'Complete overhaul of client-facing portal',
    status: 'active',
    startDate: '2026-01-01',
    deadline: '2026-03-15',
    memberCount: 4
  },
  {
    id: 2,
    name: 'Internal CRM Migration',
    client: 'Internal',
    description: 'Migrate from legacy CRM to new platform',
    status: 'active',
    startDate: '2025-12-15',
    deadline: '2026-02-28',
    memberCount: 3
  },
  {
    id: 3,
    name: 'Q4 Marketing Campaign',
    client: 'TechStart Inc',
    description: 'Digital marketing campaign for product launch',
    status: 'completed',
    startDate: '2025-10-01',
    deadline: '2025-12-31',
    memberCount: 5
  }
];

const MOCK_TASKS = [
  {
    id: 1,
    title: 'Design new dashboard layout',
    description: 'Create wireframes and mockups',
    projectId: 1,
    projectName: 'Client Portal Redesign',
    assigneeId: 2,
    assigneeName: 'Sarah Chen',
    priority: 'high',
    status: 'in_progress',
    dueDate: '2026-01-20'
  },
  {
    id: 2,
    title: 'Set up authentication flow',
    description: 'Implement OAuth and session management',
    projectId: 1,
    projectName: 'Client Portal Redesign',
    assigneeId: 3,
    assigneeName: 'Mike Johnson',
    priority: 'high',
    status: 'in_progress',
    dueDate: '2026-01-18'
  },
  {
    id: 3,
    title: 'Database schema design',
    description: 'Design tables for new CRM',
    projectId: 2,
    projectName: 'Internal CRM Migration',
    assigneeId: 1,
    assigneeName: 'Admin User',
    priority: 'medium',
    status: 'todo',
